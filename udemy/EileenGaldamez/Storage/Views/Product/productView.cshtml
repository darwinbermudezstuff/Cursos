@model Storage.Models.Product.ProductViewModels

<h1>@ViewBag.Title.</h1>
<hr />

@if (Model.Error.Error)
{
    @Html.Partial("_ModalError", Model.Error)
}
else
{
    <p>
        <label class="ActionPop" data-url="@Url.Action("productCreate")">Create New</label>
    </p>

    if (ViewBag.successful)
    {
        <div class="alert alert-success" role="alert"><label class="glyphicon glyphicon-ok"></label> @ViewBag.Message</div>
    }


    <table class="table table-striped table-bordered datatable" id="tableInformation">
        <thead>
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Name</th>
                <th>Unit</th>
                <th>Product Type</th>
                <th>Detail</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead><!-- table head -->
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model.ProductsList)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.code</td>
                    <td>@item.name</td>
                    <td>@item.unit</td>
                    <td>@Model.ProductTypeList.Find(x => x.id == item.idProductType).name</td>
                    <td>@item.detail</td>
                    <td @if (@item.state == "Active") { @(" style = color:green;")         ; } else { @(" style = color:red;")      ; }>@item.state</td>
                    <td>                        
                        <label class="ActionPop" data-url="@Url.Action("productEdit", new { id = item.id })">Edit</label>
                        @if (@item.state == "Active")
                        {
                            @Html.ActionLink("Disable", "productDisable", new { id = item.id, state = "Disable" });
                        }
                        else
                        {
                            @Html.ActionLink("Active", "productDisable", new { id = item.id, state = "Active" });
                        }
                    </td>
                </tr>
    i++;
}
        </tbody>
    </table>
    <p>
        <label class="ActionPop" data-url="@Url.Action("productCreate")">Create New</label>
    </p>
        }


<script>
    $(document).ready(function () {
        $('#tableInformation').dataTable({
            'aoColumns': [
                  { sWidth: "5%", bSearchable: false, bSortable: false },
                  { sWidth: "5%", bSearchable: true, bSortable: true },
                  { sWidth: "35%", bSearchable: true, bSortable: true },
                  { sWidth: "5%", bSearchable: false, bSortable: false },
                  { sWidth: "15%", bSearchable: false, bSortable: true },
                  { sWidth: "20%", bSearchable: false, bSortable: false },
                  { sWidth: "5%", bSearchable: false, bSortable: true },
                  { sWidth: "10%", bSearchable: false, bSortable: false }
            ],
            "info": true,
            "paging": true
        });
    });
</script>

