@model Storage.Models.User.UserConfigurationViewModels

<h1>@ViewBag.Title.</h1>
<h3>@ViewBag.Message</h3>

@if (Model.Error.Error)
{
    @Html.Partial("_ModalError", Model.Error)
}
else
{

    <table class="table table-striped table-bordered datatable" id="tableInformation">
        <thead>
            <tr>
                <th>#</th>
                <th>Permission Type</th>
                <th>Department</th>
                <th>Area</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead><!-- table head -->
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model.UserConfigurationList)
            {
                <tr>
                    <td>@i</td>
                    <td>@Bussines.User.TypePermissionBussines.Select.GetTypePermissionName((int)item.idTypePermission).TypePermission.name</td>
                    <td>@Bussines.CellarAreaBussines.Select.GetCellarAreaName((int)item.idCellarArea).CellarArea.name</td>
                    <td>
                        @if (String.IsNullOrEmpty(item.CategoryID.ToString()))
                    {
                            @("All Area");
                    }
                    else
                    {
                            @Bussines.CategoryBussines.Select.GetCategoryName((int)item.CategoryID).Category.name

                        }
                    </td>

                    <td @if (@item.state == "Active") { @(" style = color:green;")    ; } else { @(" style = color:red;")       ; }>
                        @item.state
                    </td>
                </tr>
    i++;
}
        </tbody>
    </table>
            }

<script>
    $(document).ready(function () {
        $('#tableInformation').dataTable({
            'aoColumns': [
                  { sWidth: "5%", bSearchable: false, bSortable: false },
                  { sWidth: "25%", bSearchable: true, bSortable: true },
                  { sWidth: "30%", bSearchable: true, bSortable: false },
                  { sWidth: "20%", bSearchable: false, bSortable: false },
                  { sWidth: "5%", bSearchable: false, bSortable: false },
                  { sWidth: "15%", bSearchable: false, bSortable: false },
            ],
            "info": true,
            "paging": true
        });
    });
</script>
